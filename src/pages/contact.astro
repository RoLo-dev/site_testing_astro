---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <section>
        <div class="wrapper-bg contact-container">
            <h1>CONTACT US</h1>
            <p>For any inquiries please reach out via email or phone or filling out the form and will get back to you as soon as possible.</p>
            <div class="contact-cta-container">
                <div>
                    <span>Email: </span>
                    <a href="mailto:acadia@gmail.com">acadia@gmail.com</a>
                </div>
                <div>
                    <span>Phone: </span>
                    <a href="tel:+122-330-4890">(122) 330 - 4890</a>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    .contact-container h1{
		font-size: 2.4rem;
		width: 80%;
		position: relative;
		margin-top: 3.75rem;
        margin-bottom: 6rem;
		line-height: 1.25;
		letter-spacing: 5px;
		font-weight: 800;
	}
	.contact-container h1:before{
		content: '';
		width: 80px;
		height: 3px;
		background-color: #000;
		position: absolute;
		top: -20px;
		left: 0;
	}
	.contact-container h1:after{
		content: '';
		width: 80px;
		height: 3px;
		background-color: #000;
		position: absolute;
		bottom: -20px;
		left: 0;
	}
</style>