<style>
	/* HERO */
	.hero-container{
		height: 750px;
		display: flex;
		justify-content: space-between;
	}
	.hero-container .col{
		width: 48%;
	}
	.hero-container .left-col{
		background-image: url('https://images.unsplash.com/photo-1719294082982-86e7b667fd59?q=80&w=1573&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		height: 100%;
	}
	.hero-container .right-col{
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
	}
	.hero-container .right-col h1{
		font-size: 2.4rem;
		width: 80%;
		position: relative;
		margin-top: 7.75rem;
		line-height: 1.25;
		letter-spacing: 5px;
		font-weight: 800;
	}
	.hero-container .right-col h1:before{
		content: '';
		width: 80px;
		height: 3px;
		background-color: #000;
		position: absolute;
		top: -20px;
		left: 0;
	}
	.hero-container .right-col h1:after{
		content: '';
		width: 80px;
		height: 3px;
		background-color: #000;
		position: absolute;
		bottom: -20px;
		left: 0;
	}
	.card-container-ctas{
		width: 100%;
		margin-top: auto;
		display: flex;
		height: 375px;
		justify-content: space-between;
	}
	.card-container-ctas .hero-cta{
		width: 47%;
		position: relative;
		background-color: #000;
		overflow: hidden;
		transition: all 0.3s ease-in;
	}
	.card-container-ctas .hero-cta img{
		object-fit: cover;
		transform: scale(1.5);
		transition: all 0.3s ease-in;
	}
	.card-container-ctas .hero-cta:after{
		font-size: 1.5rem;
		font-weight: 600;
		position: absolute;
		bottom: 30px;
		left: 30px;
		width: auto;
		color: #fff;
		letter-spacing: 1px;
		border-radius: 8px;
		padding: 6px 10px;
		transition: all 0.3s ease-in;
	}
	.card-container-ctas .left-cta{
		height: 100%;
	}
	.card-container-ctas .left-cta:after{
		content: 'The Latest';
	}
	.card-container-ctas .right-cta{
		height: 75%;
	}
	.card-container-ctas .right-cta:after{
		content: 'Insta With Us';
	}

	/* ABOUT SECTION */
	.about-container{
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
	}
	.about-container .col{
		height: auto;
	}
	.about-container .col:first-of-type{
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40%;
	}
	.about-container .col:first-of-type h2{
		max-width: 375px;
		text-align: center;
	}
	.about-container .col:last-of-type{
		width: 60%;
	}

	/* PROMO SECTION */
	.promo-container{
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		gap: 2rem 5.625rem;
	}
	.promo-container .card{
		min-width: 350px;
		width: 29%;
		position: relative;
		cursor: pointer;
	}
	.promo-container .card figure{
		overflow: hidden;
		width: 100%;
		height: 500px;
		margin-bottom: 5rem;
	}
	.promo-container .card figure img{
		object-fit: cover;
	}
	.card-title-container{
		background-color: rgb(188, 188, 188);
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 4rem 2rem;
		width: 250px;
		position: absolute;
		bottom: 22.5%;
		left: 50%;
		margin-left: -125px;
		transition: all 0.3s ease-in;
	}
	.card-title-container h2:before,
	.card-title-container h2:after{
		left: 0;
		margin-left: 0;
		width: 50px;
		transition: all 0.3s ease-in;
	}

	/* SUBSCRIBE SECTION */
	.subscribe-container{
		padding: 4rem 0;
		background-color: rgb(188, 188, 188);
		box-shadow: rgba(0, 0, 0, 0.45) 0px 25px 20px -20px;
	}
	.subscribe-container h3{
		margin: 0 auto;
		text-align: center;
		letter-spacing: 1px;
	}
	.subscribe-container form *{
		font-family: 'Manrope', sans-serif;
	}
	.subscribe-container form{
		max-width: 450px;
		margin: 3rem auto 0 auto;
		display: flex;
		justify-content: center;
	}
	.subscribe-container form input{
		border: 0;
	}
	form input[type="email"]{
		border: 0;
		padding: 1rem 5px 1rem 10px;
		margin-right: 2rem;
		width: 350px;
	}
	form input[type="button"]{
		padding: 1rem 10px;
		color: #fff;
		letter-spacing: 1px;
		cursor: pointer;
		background-color: #000;
		transition: all 0.3s ease;
	}
	form input[type="button"]::placeholder{
		letter-spacing: 1px;;
	}

	/* MEDIA SECTION */
	.gallery-container{
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 3rem;
	}
	.gallery-container .gallery-card{
		height: 350px;
		overflow: hidden;
	}
	.gallery-container .title-card{
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.gallery-container .title-card h2{
		max-width: 325px;
		text-align: center;
	}
	.gallery-container .gallery-card img{
		object-fit: cover;
	}

	/* MEDIA QUERIES */
	@media screen and (max-width: 1216px){
		.hero-container .right-col h1{
			margin-top: 4.75rem;
		}
	}
	@media screen and (max-width: 880px){
		.hero-container{
			height: 700px;
			width: 75%;
			margin: 0 auto;
		}
		.hero-container .left-col{
			display: none;
		}
		.hero-container .right-col{
			width: 100%;
		}
		.card-container-ctas .right-cta{
			height: 100%;
		}
		.about-container{
			flex-direction: column;
			align-items: center;
			gap: 4rem 0;
		}
		.about-container .col:first-of-type,
		.about-container .col:last-of-type{
			width: 100%;
		}
		.promo-container{
			gap: 2rem 3.625rem;
		}
	}
	@media screen and (min-width: 821px){
		.card-container-ctas .hero-cta:hover img{
			transform: scale(1);
		}
		.card-container-ctas .hero-cta:hover:after{
			background-color: rgba(0, 0, 0, 0.85);
		}
		.promo-container .card:hover .card-title-container h2:before,
		.promo-container .card:hover .card-title-container h2:after{
			width: 100%;
		}
		.promo-container .card:hover .card-title-container{
			box-shadow: rgba(0, 0, 0, 0.45) 0px 25px 20px -20px;
		}
		form input[type="button"]:hover{
			box-shadow: rgba(0, 0, 0, 0.45) 0px 25px 20px -20px;
		}
	}
	@media screen and (max-width: 820px){
		.hero-container{height: 550px;}
		.hero-container .right-col h1{
			margin-top: 3rem;
		}
		.card-container-ctas{height: 300px;}
		.promo-container{gap: 3.5rem;}
		.promo-container .card{
			width: 75%;
		}
		.promo-container .card figure{
			height: 400px;
		}
		.card-title-container{
			width: 225px;
			margin-left: -112.5px;
			bottom: 19%;
		}
		.gallery-container{
			grid-template-columns: repeat(2, 1fr);
			gap: 2rem;
		}
	}
	@media screen and (max-width: 698px){
		.card-container-ctas{
			height: 250px;
			flex-direction: column;
			gap: 1.25rem 0;
		}
		.card-container-ctas .hero-cta{
			width: 100%;
			object-position: top;
		}
		form{
			display: flex;
			flex-direction: column;
			gap: 1.25rem 0;
			align-items: center;
		}
		form input[type="email"]{width: 85%;margin-right: 0;}
		form input[type="button"]{width: 50%;}
	}
	@media screen and (max-width: 490px){
		.hero-container{height: 525px;}
		.hero-container .right-col h1{
			font-size: 2.125rem;
			width: 100%;
		}
		.promo-container .card{
			width: 90%;
			min-width: 300px;
		}
		.promo-container .card figure{
			height: 375px;
			margin-bottom: 7rem;
		}
		.card-title-container{
			padding: 3rem 2rem;
			bottom: 26%;
		}
		.gallery-container{
			grid-template-columns: repeat(1, 1fr);
			gap: 1.25rem;
		}
		.gallery-container .gallery-card{
			height: 225px;
		}
	}
</style>