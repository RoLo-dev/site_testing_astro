<style>
    header{
        width: 100%;
        padding: 1rem 0 3rem 0;
    }
    .mobile-nav{display: none;}
    .header-container{
        display: flex;
        align-items: center;
    }
    .header-container .logo{
        font-weight: 800;
        letter-spacing: 4.5px;
        background-color: #e5e5e5;
        padding: 5px 10px;
        border: 1px solid #000;
        margin-right: 3.5rem;
    }
    .header-container nav ul li{
        margin-right: 1.25rem;
    }
    .header-container nav ul li:last-child{
        margin-right: 0;
    }
    .header-container nav ul li a{
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        position: relative;
    }
    .header-container nav ul li a:after{
        content: '';
        position: absolute;
        bottom: -3px;
        left: 0;
        background-color: #000;
        width: 0;
        height: 0;
        transition: all 0.2s ease-in;
    }
    .header-container nav ul li,
    .header-social-media ul li{
        display: inline-block;
    }
    .header-social-media{
        margin-left: auto;
        justify-self: flex-end;
    }
    .header-social-media ul li{
        margin-right: 1rem;
    }
    .header-social-media ul li:last-child{
        margin-right: 0;
    }
    @media screen and (min-width: 821px){
        .header-container .logo:hover{
            text-decoration: none;
        }
        .header-container nav ul li a:hover:after{
            width: 100%;
            height: 2px;
        }
    }
    @media screen and (min-width: 481px){
        .hamburger-icon-wrapper{display: none;}
    }
    @media screen and (max-width: 480px){
        .header-container{justify-content: space-between;}
        .desktop-el{display: none;}

        .mobile-nav{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: fixed;
            opacity: 0;
            top: 0;
            right: 0;
            width: 100%;
            height: 100vh;
            transform: translate(100%,0);
            background: #fff;
            z-index: 4;
            transition: all 0.3s ease-out;
        }
        .mobile-nav.show-nav{ opacity: 0.98;transform: translateY(0); }
        .hamburger-icon-wrapper{
            background: transparent;
            border: 0;
            padding: 1.25rem 0.9rem;
            z-index: 10;
        }
        .hamburger-icon{ display: block;position: relative; }
        .hamburger-icon,
        .hamburger-icon::before,
        .hamburger-icon::after{
            /* width: 1.75rem; */
            width: 2.25rem;
            height: 2px;
            background: #000;
            border-radius: 30px;
            transition: transform 300ms ease-in-out, opacity 200ms linear;
        }
        .hamburger-icon::before,
        .hamburger-icon::after{ content: '';position: absolute;left: 0; }
        .hamburger-icon::before{bottom: 9px;}
        .hamburger-icon::after{top: 9px;}
        .animate{ transform: rotate(45deg); }
        .animate::before{ opacity: 0; }
        .animate::after{ transform: rotate(90deg) translate(-9px); }
        .header-social-media{margin-left: 0;}
        .mobile-nav ul li a{font-size: 1.25rem;}
        .mobile-nav nav ul li{margin-bottom: 1rem;}
    }
</style>
<script>
    const mobileOnly = window.matchMedia('(max-width: 900px)');
    const openNavBtn = document.querySelector('.hamburger-icon-wrapper');
    const mobileNav = document.querySelector('.mobile-nav');
    const openIcon = document.querySelector('.hamburger-icon');

    function openNavMenu(){
        openIcon.classList.toggle('animate');
        mobileNav.classList.toggle('show-nav');

        // const navAnchorTag = document.querySelectorAll('.nav-link-anchor')

        // if(mobileNav.classList.contains('show-nav')){
        //     navAnchorTag.forEach((el) => {
        //         el.setAttribute('tabindex', '0')
        //     })
        // } else{
        //     navAnchorTag.forEach((el) => {
        //         el.setAttribute('tabindex', '-1')
        //     })
        // }
    }

    openNavBtn.addEventListener('click', openNavMenu);
    openNavBtn.addEventListener('keydown', (event) =>{
        if(event.key == 13){
            openNavMenu();
        }
    });
</script>